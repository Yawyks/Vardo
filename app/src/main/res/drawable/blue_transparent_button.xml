<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid
                android:color="#be000000"/>

            <stroke
                android:width="2dp"
                android:color="#be024b98" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <corners
                android:radius="5dp"/>
        </shape>
    </item>
</selector>